# -------------------------------------------------------------------
# make some commands (potentially) less destructive
# -------------------------------------------------------------------
alias rm='rm -i'

# gnu alias
alias ls='ls --color=auto'
alias grep='ggrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'
alias egrep='gegrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'
alias fgrep='gfgrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'
alias sed='/usr/local/bin/gsed'
alias awk='/usr/local/bin/gawk'
alias grep='/usr/local/bin/ggrep'
alias find='/usr/local/bin/gfind'
# best which alias (show alias options)
alias which='alias | gwhich --tty-only --read-alias --show-dot --show-tilde'


# some alias
#alias today='calendar -A 0 -f /usr/share/calendar/calendar.computer| sort'
alias dus='du -sckx * | sort -nr'
alias adventure='emacs -batch -l dunnet'
alias mailsize='du -hs ~/Library/mail'
alias bk='cd $OLDPWD'
alias ttop='top -ocpu -R -F -s 2 -n30'
alias lh='ls -a | egrep "^\."'


